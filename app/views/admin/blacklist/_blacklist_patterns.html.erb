<table cellspacing="1" cellpadding="0">
<tr class="first">
  <th><%= _("Pattern") %></th>
  <th><%= _("Type") %></th>
  <th><%= _("Edit") %></th>
  <th><%= _("Delete")%></th>
</tr>
<% for blacklist_pattern in @blacklist_patterns -%>
<tr <%= alternate_class -%>>  
  <td class="field"><%= link_to h(blacklist_pattern.pattern), :action => "edit", :id => blacklist_pattern.id %></td>
  <td class="field"><%= blacklist_pattern.class %></td>
  <td class="operation"><%= link_to_edit blacklist_pattern %></td>
  <td class="operation"><%= link_to image_tag('admin/delete.png'), {:action => 'destroy', :id => blacklist_pattern.id, :page => params[:page] },  :confirm => "Are you sure?", :method => :post %></td>
</tr>  
<% end -%>
</table>
